<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="183dp"
        tools:layout_editor_absoluteY="130dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/sydneyblock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFC107"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextClock
                    android:id="@+id/textclock1"
                    android:layout_width="210dp"
                    android:layout_height="match_parent"
                    android:textSize="36sp"
                    android:timeZone="Australia/Sydney"
                    tools:visibility="visible">


                </TextClock>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sydeny"
                        android:textSize="36sp" />

                    <TextView
                        android:id="@+id/country1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Australia/NSW" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/imageSydney"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/sydney" />

            <LinearLayout
                android:id="@+id/beijingblock"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#CBFF1744"
                android:orientation="horizontal">

                <TextClock
                    android:id="@+id/textclock2"
                    android:layout_width="210dp"
                    android:layout_height="match_parent"
                    android:textSize="36sp"
                    android:timeZone="Etc/GMT-8"
                    tools:visibility="visible">


                </TextClock>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Beijing"
                        android:textSize="36sp" />

                    <TextView
                        android:id="@+id/country2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="China" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/imageBeijing"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/beijing2" />

            <LinearLayout
                android:id="@+id/tokyoblock"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#4500E5FF"
                android:orientation="horizontal">

                <TextClock
                    android:id="@+id/textclock3"
                    android:layout_width="210dp"
                    android:layout_height="match_parent"
                    android:textSize="36sp"
                    android:timeZone="Asia/Tokyo"
                    tools:visibility="visible">

                </TextClock>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tokyo"
                        android:textSize="36sp" />

                    <TextView
                        android:id="@+id/country3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Japen" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/imageTokyo"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/tokyo" />

            <LinearLayout
                android:id="@+id/londonblock"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00E676"
                android:orientation="horizontal">

                <TextClock
                    android:id="@+id/textclock4"
                    android:layout_width="210dp"
                    android:layout_height="match_parent"
                    android:textSize="36sp"
                    android:timeZone="Europe/London"
                    tools:visibility="visible">

                </TextClock>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="London"
                        android:textSize="36sp" />

                    <TextView
                        android:id="@+id/country4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="England" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/imageLondon"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/london" />

            <LinearLayout
                android:id="@+id/newyorkblock"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#D32979FF"
                android:orientation="horizontal">

                <TextClock
                    android:id="@+id/textclock5"
                    android:layout_width="210dp"
                    android:layout_height="match_parent"
                    android:textSize="36sp"
                    android:timeZone="America/New_York"
                    tools:visibility="visible">

                </TextClock>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="NewYork"
                        android:textSize="36sp" />

                    <TextView
                        android:id="@+id/country5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="America" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/imageNewYork"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/newyork" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>